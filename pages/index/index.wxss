/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.notice-marquee {
  position: relative;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  height: 72rpx;
  width: 500rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  background-color: #3C0AE0;
}
.notice-item{
  width: 450rpx;
  position: relative;
  background-color: #ffddcc;
}
